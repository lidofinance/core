{
  "extends": "solhint:recommended",
  "plugins": ["lido"],
  "rules": {
    "not-rely-on-time": "off",
    "no-inline-assembly": "off",
    "var-name-mixedcase": "off",
    "compiler-version": "off",
    "reason-string": "off",
    "no-empty-blocks": "off",
    "func-name-mixedcase": "off",
    "lido/fixed-compiler-version": "error",
    "visibility-modifier-order": "error",
    "no-unused-vars": "error",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ]
  },
  "overrides": [
    {
      "files": ["contracts/0.8.9/utils/Versioned.sol"],
      "rules": {
        "no-global-import": "off"
      }
    },
    {
      "files": ["contracts/0.4.24/utils/Versioned.sol"],
      "rules": {
        "no-global-import": "off"
      }
    },
    {
      "files": ["contracts/0.8.9/utils/PausableUntil.sol"],
      "rules": {
        "no-global-import": "off"
      }
    },
    {
      "files": ["contracts/0.8.9/proxy/WithdrawalsManagerProxy.sol"],
      "rules": {
        "one-contract-per-file": "off"
      }
    },
    {
      "files": ["contracts/0.8.9/lib/ExitLimitUtils.sol"],
      "rules": {
        "one-contract-per-file": "off"
      }
    },
    {
      "files": ["contracts/0.4.24/lib/StakeLimitUtils.sol"],
      "rules": {
        "one-contract-per-file": "off"
      }
    },
    {
      "files": ["contracts/0.8.9/proxy/OssifiableProxy.sol"],
      "rules": {
        "no-unused-imports": "off"
      }
    }
  ]
}
